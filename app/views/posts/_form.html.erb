<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= select_tag "category", options_from_collection_for_select(@categories, "id", "name"), :prompt => "请选择分类" %>
    <% if not @category_id.nil? %>
    <script>
    $("#category option").each(function(){
      if ( this.value == <%= @category_id %> )
        this.selected = true;
    });
    </script>
  <% end %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions-bar">
    <%= f.submit %>
  </div>
<% end %>
